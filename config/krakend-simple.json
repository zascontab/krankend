{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "Microservices API Gateway - Simple",
  "port": 8080,
  "debug_endpoint": true,
  "endpoints": [
    {
      "endpoint": "/health",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/health",
          "host": ["http://172.17.0.1:8089"],
          "encoding": "no-op"
        }
      ]
    },
    {
      "endpoint": "/api/whatsapp/send-message",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/send-otp",
          "host": ["http://172.17.0.1:8089"],
          "encoding": "json",
          "method": "POST"
        }
      ]
    }
  ]
}
