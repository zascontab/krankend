{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "Microservicios API Gateway con Orquestador",
  "port": 8080,
  "debug_endpoint": true,
  "extra_config": {
    "telemetry/logging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "stdout": true,
      "format": "json"
    }
  },
  "endpoints": [
    {
      "endpoint": "/health",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/api/v1/health",
          "host": ["http://172.17.0.1:8086"],
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/api/ia/conversation",
      "method": "POST",
      "input_headers": ["Content-Type"],
      "backend": [
        {
          "url_pattern": "/api/v1/conversation",
          "host": ["http://172.17.0.1:8086"],
          "method": "POST",
          "encoding": "json",
          "disable_host_sanitize": true
        }
      ]
    },
    {
      "endpoint": "/api/whatsapp/send-message",
      "method": "POST",
      "input_headers": ["Content-Type"],
      "backend": [
        {
          "url_pattern": "/send-otp",
          "host": ["http://172.17.0.1:8089"],
          "method": "POST",
          "encoding": "json",
          "disable_host_sanitize": true
        }
      ]
    },
    {
      "endpoint": "/api/process-and-respond",
      "method": "POST",
      "input_headers": ["Content-Type"],
      "backend": [
        {
          "url_pattern": "/api/process",
          "host": ["http://ia-whatsapp-orchestrator:8000"],
          "method": "POST",
          "encoding": "json",
          "disable_host_sanitize": true
        }
      ]
    },
    {
      "endpoint": "/api/whatsapp/webhook",
      "method": "POST",
      "input_headers": ["Content-Type"],
      "backend": [
        {
          "url_pattern": "/api/webhook",
          "host": ["http://ia-whatsapp-orchestrator:8000"],
          "method": "POST",
          "encoding": "json",
          "disable_host_sanitize": true
        }
      ]
    }
  ]
}