{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "Microservicios API Gateway - Configuraci√≥n Optimizada",
  "port": 8080,
  "debug_endpoint": true,
  "cache_ttl": "300s",
  "timeout": "3s",
  "extra_config": {
    "telemetry/logging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "stdout": true,
      "format": "json",
      "skip_paths": ["/health"]
    },
    "telemetry/metrics": {
      "collection_time": "60s",
      "listen_address": ":8090"
    },
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "POST", "PUT", "DELETE"],
      "allow_headers": ["Origin", "Authorization", "Content-Type"],
      "expose_headers": ["Content-Length"],
      "max_age": "3600"
    }
  },
  "endpoints": [
    {
      "endpoint": "/health",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/health",
          "host": ["http://token-service:8081"],
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/auth/token",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/api/v1/token",
          "host": ["http://token-service:8081"],
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/api/ia/conversation",
      "method": "POST",
      "input_headers": ["Content-Type"],
      "extra_config": {
        "auth/validator": {
          "validator": "custom",
          "validator_url": "http://token-service:8081/api/v1/validate",
          "method": "POST",
          "body_encoding": "json",
          "cache": true,
          "cache_duration": 3600
        },
        "validation/json-schema": {
          "type": "object",
          "required": ["text", "session_id"],
          "properties": {
            "text": {
              "type": "string"
            },
            "session_id": {
              "type": "string"
            },
            "language": {
              "type": "string"
            },
            "data": {
              "type": "object"
            },
            "agent_id": {
              "type": "integer"
            }
          }
        },
        "qos/ratelimit/router": {
          "max_rate": 100,
          "strategy": "ip",
          "client_max_rate": 10,
          "capacity": 10
        }
      },
      "backend": [
        {
          "url_pattern": "/api/v1/conversation",
          "host": ["http://172.17.0.1:8086"],
          "method": "POST",
          "encoding": "json",
          "disable_host_sanitize": true,
          "extra_config": {
            "modifier/martian": {
              "header.Modifier": {
                "scope": ["request"],
                "name": "X-User-ID",
                "value": "{{ .headers.X-User-ID }}"
              }
            }
          }
        }
      ]
    },
    {
      "endpoint": "/api/whatsapp/send-message",
      "method": "POST",
      "input_headers": ["Content-Type"],
      "extra_config": {
        "auth/validator": {
          "validator": "custom",
          "validator_url": "http://token-service:8081/api/v1/validate",
          "method": "POST",
          "body_encoding": "json",
          "cache": true,
          "cache_duration": 3600
        },
        "validation/json-schema": {
          "type": "object",
          "required": ["phone_number", "message"],
          "properties": {
            "phone_number": {
              "type": "string"
            },
            "user_id": {
              "type": "integer"
            },
            "message": {
              "type": "string"
            },
            "channel": {
              "type": "string"
            },
            "purpose": {
              "type": "string"
            }
          }
        },
        "qos/ratelimit/router": {
          "max_rate": 50,
          "strategy": "ip",
          "client_max_rate": 5,
          "capacity": 5
        }
      },
      "backend": [
        {
          "url_pattern": "/api/messages/send-message",
          "host": ["http://172.17.0.1:8089"],
          "method": "POST",
          "encoding": "json",
          "disable_host_sanitize": true
        }
      ]
    },
    {
      "endpoint": "/api/process-and-respond",
      "method": "POST",
      "input_headers": ["Content-Type"],
      "extra_config": {
        "auth/validator": {
          "validator": "custom",
          "validator_url": "http://token-service:8081/api/v1/validate",
          "method": "POST",
          "body_encoding": "json",
          "cache": true,
          "cache_duration": 3600
        },
        "validation/json-schema": {
          "type": "object",
          "required": ["text", "phone_number"],
          "properties": {
            "text": {
              "type": "string"
            },
            "session_id": {
              "type": "string"
            },
            "language": {
              "type": "string"
            },
            "data": {
              "type": "object"
            },
            "agent_id": {
              "type": "integer"
            },
            "phone_number": {
              "type": "string"
            },
            "user_id": {
              "type": "integer"
            },
            "purpose": {
              "type": "string"
            },
            "channel": {
              "type": "string"
            }
          }
        },
        "qos/ratelimit/router": {
          "max_rate": 30,
          "strategy": "ip",
          "client_max_rate": 3,
          "capacity": 3
        }
      },
      "backend": [
        {
          "url_pattern": "/api/process",
          "host": ["http://ia-whatsapp-orchestrator:8000"],
          "method": "POST",
          "encoding": "json",
          "disable_host_sanitize": true
        }
      ]
    },
    {
      "endpoint": "/api/whatsapp/webhook",
      "method": "POST",
      "input_headers": ["Content-Type"],
      "extra_config": {
        "validation/json-schema": {
          "type": "object",
          "required": ["messageId", "sender", "content"],
          "properties": {
            "messageId": {
              "type": "string"
            },
            "sender": {
              "type": "string"
            },
            "pushName": {
              "type": "string"
            },
            "timestamp": {
              "type": "integer"
            },
            "type": {
              "type": "string"
            },
            "content": {
              "type": "string"
            },
            "mediaUrl": {
              "type": "string"
            },
            "data": {
              "type": "object"
            }
          }
        }
      },
      "backend": [
        {
          "url_pattern": "/api/webhook",
          "host": ["http://ia-whatsapp-orchestrator:8000"],
          "method": "POST",
          "encoding": "json",
          "disable_host_sanitize": true
        }
      ]
    },
    {
      "endpoint": "/api/bot/process-message",
      "method": "POST",
      "input_headers": ["Content-Type"],
      "extra_config": {
        "validation/json-schema": {
          "type": "object",
          "required": ["messageId", "sender", "content"],
          "properties": {
            "messageId": {
              "type": "string"
            },
            "sender": {
              "type": "string"
            },
            "content": {
              "type": "string"
            },
            "type": {
              "type": "string"
            }
          }
        }
      },
      "backend": [
        {
          "url_pattern": "/api/v1/conversation",
          "host": ["http://172.17.0.1:8086"],
          "encoding": "json",
          "method": "POST",
          "extra_config": {
            "modifier/martian": {
              "body.Modifier": {
                "scope": ["request"],
                "content": "{\"text\": \"{{.body.content}}\", \"session_id\": \"{{.body.sender}}\", \"language\": \"es\", \"data\": {\"forceMode\": \"customer_service\"}, \"agent_id\": 1}"
              }
            }
          }
        },
        {
          "url_pattern": "/api/messages/send-message",
          "host": ["http://172.17.0.1:8089"],
          "encoding": "json",
          "method": "POST",
          "extra_config": {
            "modifier/martian": {
              "body.Modifier": {
                "scope": ["request"],
                "content": "{\"phone\": \"{{luaCall \"extractPhone\" .body.sender}}\", \"message\": \"{{luaCall \"js\" .resp0_body.text}}\"}"
              }
            }
          }
        }
      ]
    },
    {
      "endpoint": "/metrics",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/metrics",
          "host": ["http://token-service:8081"],
          "encoding": "no-op"
        }
      ]
    }
  ]
}