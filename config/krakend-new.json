{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "Rantipay API Gateway",
  "port": 8080,
  "timeout": "10s",
  "cache_ttl": "3600s",
  "output_encoding": "json",
  "endpoints": [
    {
      "endpoint": "/auth/register-otp",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/register-otp",
          "host": ["http://token-service:8081"],
          "encoding": "json",
          "method": "POST"
        }
      ]
    },
    {
      "endpoint": "/auth/verify-otp",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/verify-otp",
          "host": ["http://token-service:8081"],
          "encoding": "json",
          "method": "POST"
        }
      ]
    },
    {
      "endpoint": "/auth/validate",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/validates",
          "host": ["http://token-service:8081"],
          "encoding": "json",
          "method": "POST"
        }
      ]
    }
  ],
  "extra_config": {
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "POST", "OPTIONS"],
      "allow_headers": ["Authorization", "Content-Type"],
      "expose_headers": ["Content-Length"],
      "allow_credentials": true,
      "max_age": "12h"
    },
    "security/jwt": {
      "jwks_uri": "http://keycloak:8080/realms/rantipay/protocol/openid-connect/certs",
      "roles_key": "roles",
      "roles_key_is_nested": true,
      "issuer": "http://keycloak:8080/realms/rantipay",
      "audience": ["317305190531334149"]
    },
    "telemetry/logging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]"
    },
    "router": {
      "return_error_details": true
    },
    "endpoint/rate-limit": {
      "max_rate": 100,
      "capacity": 100,
      "every": "1m"
    }
  }
}